<Window x:Class="lithium_toolbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lithium_toolbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="400"
        Topmost="True" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>

        <Button x:Name="TimerFunctionButton" Content="Timer" HorizontalAlignment="Left" Margin="10,10,0,10" Width="90" Click="TimerFunctionButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="105,10,0,10" Width="90" Click="ExitButton_Click"/>
    </Grid>
</Window>
